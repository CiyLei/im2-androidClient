<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivOtherAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/emoji_0x1f385"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rvOtherUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toRightOf="@id/ivOtherAvatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="对方名称" />

        <LinearLayout
            android:id="@+id/llOtherData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/ivOtherAvatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvOtherUserName">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvOtherData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_chat_other"
                android:padding="8dp"
                android:textColor="@color/white"
                tools:text="假装我是语音：1秒" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clSelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivSelfAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/emoji_0x1f385"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rvSelfUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:textAlignment="textEnd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivSelfAvatar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="自己名称" />

        <LinearLayout
            android:id="@+id/llSelfData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivSelfAvatar"
            app:layout_constraintTop_toBottomOf="@id/rvSelfUserName">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvSelfData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_chat_self"
                android:padding="8dp"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                tools:text="假装我是语音：1秒" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvSelfState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="@id/rvSelfUserName"
            app:layout_constraintTop_toBottomOf="@id/llSelfData"
            tools:text="发送成功" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvSelfIsRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:textSize="10sp"
            app:layout_constraintRight_toLeftOf="@id/tvSelfState"
            app:layout_constraintTop_toTopOf="@id/tvSelfState"
            tools:text="已读" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>